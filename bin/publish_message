#!/usr/bin/env node

var amqp = require("amqplib/callback_api");

amqp.connect(process.argv[2], function (error0, connection) {
  connection.createChannel(function (error1, channel) {
    var x = channel.publish("events", process.argv[3], Buffer.from(process.argv[4]));
    console.log(`Publish Success: ${x}`);
    setTimeout(() => {
      connection.close();
      process.exit();
    }, 500)
  })
});
